<Window x:Class="BarcodeGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:BarcodeGenerator.Converters"
        mc:Ignorable="d"
        Title="Barcode Generator &amp; Printer" 
        Height="700" Width="1000" 
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,5,5,2"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D5DBDB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#34495E" Padding="15,10">
            <TextBlock Text="Barcode Generator &amp; Printer" 
                      FontSize="18" FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Left"/>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>          <!-- Settings Panel -->
                <ColumnDefinition Width="*"/>            <!-- Preview Panel -->
                <ColumnDefinition Width="300"/>          <!-- Print Controls Panel -->
                <ColumnDefinition Width="250"/>          <!-- Recent Barcodes Sidebar -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Input Controls -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    
                    <!-- Barcode Data Section -->
                    <TextBlock Text="Barcode Data" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <TextBlock Text="Barcode Text (Max 35 chars):" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="BarcodeDataTextBox" 
                                    Text="{Binding BarcodeData, UpdateSourceTrigger=PropertyChanged}" 
                                    MaxLength="35"
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Text="Description:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                    MaxLength="100"
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Text="Number of Copies:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Label Size Section -->
                    <TextBlock Text="Label Size (mm)" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="10" Background="#FAFAFA">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="0" 
                                    Text="{Binding LabelWidth, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Height:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="2" 
                                    Text="{Binding LabelHeight, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <Button Grid.Row="3" Grid.ColumnSpan="3" 
                                   Content="Reset to Default (100x50mm)" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,10,0,0"
                                   Command="{Binding ResetToDefaultsCommand}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Barcode Size Section -->
                    <TextBlock Text="Barcode Size (mm)" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="10" Background="#FAFAFA">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="0" 
                                    Text="{Binding BarcodeWidth, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Height:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="2" 
                                    Text="{Binding BarcodeHeight, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Font Size:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="3" Grid.Column="0" 
                                    Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Printer Selection -->
                    <TextBlock Text="Printer Selection" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <TextBlock Text="Available Printers:" Style="{StaticResource InputLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding AvailablePrinters}" 
                                     SelectedItem="{Binding SelectedPrinter}"
                                     Padding="5" 
                                     BorderBrush="#BDC3C7" 
                                     BorderThickness="1"/>
                            
                            <Button Content="Refresh Printers" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,10,0,0"
                                   Command="{Binding RefreshPrintersCommand}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Print Actions -->
                    <TextBlock Text="Print Actions" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <Button Content="Print Labels" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Margin="0,5"
                                   Command="{Binding PrintLabelsCommand}"
                                   IsEnabled="{Binding IsValidData}"/>
                            
                            <Button Content="Test Print" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,5"
                                   Command="{Binding TestPrintCommand}"/>
                            
                            <Button Content="Clear Data" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,5"
                                   Command="{Binding ClearDataCommand}"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         Background="#E8E8E8" 
                         Width="2"/>
            
            <!-- Preview Panel -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Preview Header -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E8E8E8" BorderThickness="1" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Label Preview" 
                                  FontSize="14" FontWeight="Bold" 
                                  VerticalAlignment="Center"/>
                        
                        <CheckBox Grid.Column="1" 
                                 Content="Show Preview" 
                                 IsChecked="{Binding ShowPreview}"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Preview Content -->
                <Border Grid.Row="1" 
                       BorderBrush="#E8E8E8" 
                       BorderThickness="0,0,1,1" 
                       Background="White">
                    <Grid>
                        <!-- Preview Image -->
                        <ScrollViewer x:Name="PreviewScrollViewer" 
                                     HorizontalScrollBarVisibility="Auto" 
                                     VerticalScrollBarVisibility="Auto"
                                     Background="#F5F5F5">
                            <Image x:Name="PreviewImage" 
                                  Source="{Binding PreviewImage}" 
                                  Stretch="None"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="20"/>
                        </ScrollViewer>
                        
                        <!-- Loading Indicator -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsPreviewGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Generating Preview..." 
                                      FontSize="14" 
                                      HorizontalAlignment="Center" 
                                      Margin="5"/>
                        </StackPanel>
                        
                        <!-- No Preview Message -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ShowPreview, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="Preview Disabled" 
                                      FontSize="16" 
                                      Foreground="#7F8C8D"
                                      HorizontalAlignment="Center" 
                                      Margin="5"/>
                            <TextBlock Text="Enable preview to see label design" 
                                      FontSize="12" 
                                      Foreground="#95A5A6"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Validation Messages -->
                <Border Grid.Row="2" 
                       Background="{Binding IsValidData, Converter={x:Static converters:BooleanToBrushConverter.Default}}"
                       BorderBrush="#E8E8E8" 
                       BorderThickness="0,1,1,1" 
                       Padding="10">
                    <TextBlock Text="{Binding ValidationMessage}" 
                              FontSize="11"
                              Foreground="{Binding IsValidData, Converter={x:Static converters:BooleanToTextBrushConverter.Default}}"
                              TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <!-- Print Controls Panel -->
            <Border Grid.Column="2" 
                   BorderBrush="LightGray" 
                   BorderThickness="1,0,1,0" 
                   Padding="15"
                   Background="White">
                <StackPanel>
                    <TextBlock Text="Print Controls" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>

                    <!-- Printer Selection -->
                    <TextBlock Text="Printer:" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailablePrinters}"
                             SelectedItem="{Binding SelectedPrinter}"
                             Margin="0,0,0,10"/>
                    
                    <!-- Label Count -->
                    <TextBlock Text="Copies:" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox Text="{Binding Copies}" 
                            Style="{StaticResource InputTextBoxStyle}"
                            Margin="0,0,0,15"/>
                    
                    <!-- Action Buttons -->
                    <Button Content="🖨️ Print Labels" 
                           Command="{Binding PrintLabelsCommand}"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Margin="0,0,0,10"/>
                    
                    <Button Content="🔧 Test Print" 
                           Command="{Binding TestPrintCommand}"
                           Background="Orange"
                           Foreground="White"
                           Padding="10,6"
                           BorderThickness="0"
                           Margin="0,0,0,20"/>
                    
                    <!-- Save Barcode -->
                    <Button Content="💾 Save Barcode" 
                           Command="{Binding SaveBarcodeCommand}"
                           IsEnabled="{Binding CanSave}"
                           Background="Green"
                           Foreground="White"
                           Padding="10,6"
                           BorderThickness="0"
                           Margin="0,0,0,10"
                           ToolTip="Save current barcode settings to database"/>
                    
                    <!-- Refresh Printers -->
                    <Button Content="🔄 Refresh Printers" 
                           Command="{Binding RefreshPrintersCommand}"
                           Background="Gray"
                           Foreground="White"
                           Padding="10,6"
                           BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Recent Barcodes Sidebar -->
            <Border Grid.Column="3" 
                   BorderBrush="LightGray" 
                   BorderThickness="1,0,0,0" 
                   Padding="10"
                   Background="#F8F8F8">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Recent Barcodes" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,10"/>
                    
                    <!-- Action Buttons -->
                    <Button Content="📊 View Full History" 
                           Command="{Binding ViewHistoryCommand}"
                           Margin="0,0,0,5"
                           Padding="8,4"
                           HorizontalAlignment="Stretch"/>
                    
                    <Button Content="🔄 Refresh" 
                           Command="{Binding RefreshHistoryCommand}"
                           Margin="0,0,0,15"
                           Padding="8,4"
                           HorizontalAlignment="Stretch"/>
                    
                    <!-- Recent Barcodes List -->
                    <ListBox ItemsSource="{Binding RecentBarcodes}"
                            SelectedItem="{Binding CurrentBarcodeRecord}"
                            Height="400"
                            Margin="0,0,0,10"
                            SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" 
                                       Margin="2"
                                       Background="White"
                                       BorderBrush="LightGray"
                                       BorderThickness="1"
                                       CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="{Binding BarcodeText}" 
                                                  FontWeight="Bold"
                                                  FontSize="12"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="10"
                                                  Foreground="Gray"
                                                  TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="9" Foreground="DarkGray">
                                            <Run Text="Default:"/>
                                            <Run Text="{Binding DefaultLabelCount}"/>
                                            <Run Text="copies"/>
                                        </TextBlock>
                                        <TextBlock FontSize="9" Foreground="DarkGray">
                                            <Run Text="Printed:"/>
                                            <Run Text="{Binding TotalPrintCount}"/>
                                            <Run Text="times total"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:MM/dd/yyyy}'}" 
                                                  FontSize="9" 
                                                  Foreground="DarkGray"/>
                                        <TextBlock Text="{Binding LastPrintedDate, StringFormat='Last used: {0:MM/dd/yyyy}', TargetNullValue='Never printed'}" 
                                                  FontSize="9" 
                                                  Foreground="DarkGray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Load/Reprint Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                        <Button Content="📥 Load"
                               Command="{Binding LoadBarcodeCommand}"
                               CommandParameter="{Binding CurrentBarcodeRecord}"
                               Width="100"
                               Margin="0,0,5,0"
                               ToolTip="Load selected barcode with all settings"/>
                        
                        <Button Content="🖨️ Reprint"
                               Command="{Binding ReprintCommand}"
                               Width="135"
                               IsEnabled="{Binding CanReprint}"
                               ToolTip="Reprint selected barcode"/>
                    </StackPanel>
                    
                    <!-- Statistics -->
                    <Border Background="LightYellow" 
                           BorderBrush="Orange"
                           BorderThickness="1"
                           Padding="5"
                           CornerRadius="3"
                           Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Quick Stats" 
                                      FontSize="10"
                                      FontWeight="Bold"
                                      Margin="0,0,0,3"/>
                            <TextBlock FontSize="9" Foreground="DarkGray">
                                <Run Text="Total barcodes created: "/>
                                <Run Text="{Binding RecentBarcodes.Count}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          FontSize="11" 
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedPrinter, StringFormat='Printer: {0}'}" 
                              FontSize="11" 
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    
                    <Rectangle Width="10" Height="10" 
                              Fill="{Binding IsValidData, Converter={x:Static converters:BooleanToBrushConverter.Default}}"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"/>
                    
                    <TextBlock Text="{Binding IsValidData, Converter={x:Static converters:BooleanToStatusConverter.Default}}" 
                              FontSize="11" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
