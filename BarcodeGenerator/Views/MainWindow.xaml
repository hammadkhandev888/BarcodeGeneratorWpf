<Window x:Class="BarcodeGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:BarcodeGenerator.Converters"
        mc:Ignorable="d"
        Title="Barcode Generator" 
        Height="750" Width="1200" 
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,5,4"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D5DBDB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#34495E" Padding="15,10">
            <TextBlock Text="Barcode Generator" 
                      FontSize="18" FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Left"/>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="250"/>          <!-- Settings Panel -->
                <ColumnDefinition Width="4*" MinWidth="350"/>          <!-- Preview Panel -->
                <ColumnDefinition Width="2.5*" MinWidth="250"/>        <!-- Print Controls Panel -->
                <ColumnDefinition Width="2.5*" MinWidth="280"/>        <!-- Recent Barcodes Sidebar -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Input Controls -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
                <StackPanel Margin="10">
                    
                    <!-- Barcode Data Section -->
                    <TextBlock Text="Barcode Data" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="15" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,10">
                        <StackPanel>
                            <!-- Primary barcode value that gets encoded -->
                            <TextBlock Text="Barcode Value (Max 35 chars):" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="BarcodeValueTextBox" 
                                    Text="{Binding BarcodeValue, UpdateSourceTrigger=PropertyChanged}" 
                                    MaxLength="35"
                                    Style="{StaticResource InputTextBoxStyle}"
                                    ToolTip="The actual data that will be encoded in the barcode"/>
                            
                            <!-- Text that appears below the barcode on the label -->
                            <TextBlock Text="Label Text Below Barcode :" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="BarcodeDataTextBox" 
                                    Text="{Binding BarcodeData, UpdateSourceTrigger=PropertyChanged}" 
                                    MaxLength="35"
                                    Style="{StaticResource InputTextBoxStyle}"
                                    ToolTip="Text that will be displayed below the barcode on the printed label"/>
                            
                            <!-- Description for record keeping -->
                            <TextBlock Text="Description/Notes (Max 100 chars):" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                    MaxLength="100"
                                    Style="{StaticResource InputTextBoxStyle}"
                                    ToolTip="Additional notes or description for record keeping (not printed on label)"/>
                            
                            <!-- Number of copies -->
                            <TextBlock Text="Number of Copies:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    ToolTip="Number of labels to print"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Label Size Section -->
                    <TextBlock Text="Label Size (mm)" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="15" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="0" 
                                    Text="{Binding LabelWidth, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Height:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="2" 
                                    Text="{Binding LabelHeight, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <Button Grid.Row="3" Grid.ColumnSpan="3" 
                                   Content="↺ Reset to Default (100x50mm)" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,15,0,0"
                                   Command="{Binding ResetToDefaultsCommand}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Barcode Size Section -->
                    <TextBlock Text="Barcode Size (mm)" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="15" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="0" 
                                    Text="{Binding BarcodeWidth, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Height:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="2" 
                                    Text="{Binding BarcodeHeight, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Font Size:" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox Grid.Row="3" Grid.Column="0" 
                                    Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource InputTextBoxStyle}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Utilities -->
                    <TextBlock Text="Utilities" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border BorderBrush="#E8E8E8" BorderThickness="1" Padding="15" Background="#FAFAFA" CornerRadius="4" Margin="0,0,0,10">
                        <StackPanel>
                            <Button Content="🗑️ Clear All Data" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,5"
                                   Command="{Binding ClearDataCommand}"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         Background="#E8E8E8" 
                         Width="2"/>
            
            <!-- Preview Panel -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Preview Header -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E8E8E8" BorderThickness="1" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📋 Label Preview" 
                                  FontSize="16" FontWeight="Bold" 
                                  Foreground="#2C3E50"
                                  VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1"
                                 Text="Show Preview"
                                 FontSize="12"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Preview Content -->
                <Border Grid.Row="1" 
                       BorderBrush="#E8E8E8" 
                       BorderThickness="0,0,1,1" 
                       Background="White">
                    <Grid>
                        <!-- Preview Image -->
                        <ScrollViewer x:Name="PreviewScrollViewer" 
                                     HorizontalScrollBarVisibility="Auto" 
                                     VerticalScrollBarVisibility="Auto"
                                     Background="#F5F5F5"
                                     Visibility="{Binding ShowPreview, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Image x:Name="PreviewImage" 
                                  Source="{Binding PreviewImage}" 
                                  Stretch="None"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="20"
                                  Cursor="Hand"
                                  ToolTip="🔄 Double-click to reload barcode preview"
                        />
                        </ScrollViewer>
                        
                        <!-- Loading Indicator (only show when preview is enabled AND generating) -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ShowPreview, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Visibility="{Binding IsPreviewGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Generating Preview..." 
                                          FontSize="14" 
                                          HorizontalAlignment="Center" 
                                          Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- No Preview Message -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ShowPreview, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="Preview Disabled" 
                                      FontSize="16" 
                                      Foreground="#7F8C8D"
                                      HorizontalAlignment="Center" 
                                      Margin="5"/>
                            <TextBlock Text="Enable preview to see label design" 
                                      FontSize="12" 
                                      Foreground="#95A5A6"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Validation Messages -->
                <Border Grid.Row="2" 
                       Background="{Binding IsValidData, Converter={x:Static converters:BooleanToBrushConverter.Default}}"
                       BorderBrush="#E8E8E8" 
                       BorderThickness="0,1,1,1" 
                       Padding="10"
                       MinHeight="35">
                    <TextBlock Text="{Binding ValidationMessage}" 
                              FontSize="11"
                              Foreground="{Binding IsValidData, Converter={x:Static converters:BooleanToTextBrushConverter.Default}}"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Print Controls Panel -->
            <Border Grid.Column="2" 
                   BorderBrush="#E8E8E8" 
                   BorderThickness="1,0,1,0" 
                   Padding="20"
                   Background="#FEFEFE">
                <StackPanel>
                    <TextBlock Text="🖨️ Print Controls" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- Current Data Summary -->
                    <Border Background="#F8F9FA" 
                           BorderBrush="#E8E8E8" 
                           BorderThickness="1"
                           Padding="12"
                           CornerRadius="4"
                           Margin="0,0,0,15"
                           MinHeight="100">
                        <StackPanel>
                            <TextBlock Text="Ready to Print:" 
                                      FontSize="12" 
                                      FontWeight="Bold"
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding BarcodeValue, StringFormat='Barcode: {0}'}" 
                                      FontSize="11"
                                      Foreground="#34495E"
                                      TextWrapping="Wrap"
                                      Margin="0,2"
                                      ToolTip="Data encoded in the barcode"/>
                            <TextBlock Text="{Binding BarcodeData, StringFormat='Label Text: {0}'}" 
                                      FontSize="11"
                                      Foreground="#34495E"
                                      TextWrapping="Wrap"
                                      Margin="0,2"
                                      ToolTip="Text displayed below the barcode"/>
                            <TextBlock Text="{Binding Copies, StringFormat='Copies: {0}'}" 
                                      FontSize="11"
                                      Foreground="#34495E"
                                      Margin="0,2"/>
                        </StackPanel>
                    </Border>

                    <!-- Printer Selection -->
                    <TextBlock Text="Selected Printer:" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailablePrinters}"
                             SelectedItem="{Binding SelectedPrinter}"
                             Padding="8" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="1"
                             Height="32"
                             FontSize="12"
                             Margin="0,0,0,20"
                             ToolTip="Select the printer for label output"/>
                    
                    <!-- Action Buttons -->
                    <Button Content="🖨️ Print Labels" 
                           Command="{Binding PrintLabelsCommand}"
                           Style="{StaticResource PrimaryButtonStyle}"
                           IsEnabled="{Binding IsValidData}"
                           Margin="0,0,0,10"
                           ToolTip="Print the configured labels"/>
                    
                  
                    
                    <!-- Refresh Printers -->
                    <Button Content="🔄 Refresh Printers" 
                           Command="{Binding RefreshPrintersCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <!-- Recent Barcodes Sidebar -->
            <Border Grid.Column="3" 
                   BorderBrush="#E8E8E8" 
                   BorderThickness="1,0,0,0" 
                   Padding="15"
                   Background="#F9F9F9">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="📈 Recent Barcodes" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50"
                              Margin="0,0,0,15"/>
                    
                    <!-- Action Buttons -->
                    <Button Content="📊 View Full History" 
                           Command="{Binding OpenHistoryCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,0,8"
                           HorizontalAlignment="Stretch"/>
                    
                    <Button Content="🔄 Refresh" 
                           Command="{Binding RefreshHistoryAsyncCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Stretch"/>
                    
                    <!-- Recent Barcodes List -->
                    <ListBox ItemsSource="{Binding RecentBarcodes}"
                            SelectedItem="{Binding CurrentBarcodeRecord}"
                            Height="400"
                            Margin="0,0,0,10"
                            SelectionMode="Single"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             MouseDoubleClick="ListBox_MouseDoubleClick"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" 
                                       Margin="2"
                                       Background="White"
                                       BorderBrush="LightGray"
                                       BorderThickness="1"
                                       CornerRadius="3"
                                       MinHeight="120">
                                    <StackPanel>
                                        <TextBlock Text="{Binding BarcodeText}" 
                                                  FontWeight="Bold"
                                                  FontSize="12"
                                                  TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="10"
                                                  Foreground="Gray"
                                                  TextWrapping="Wrap"
                                                  MaxHeight="40"/>
                                        <TextBlock FontSize="9" Foreground="DarkGray">
                                            <Run Text="Default:"/>
                                            <Run Text="{Binding DefaultLabelCount}"/>
                                            <Run Text="copies"/>
                                        </TextBlock>
                                        <TextBlock FontSize="9" Foreground="DarkGray">
                                            <Run Text="Printed:"/>
                                            <Run Text="{Binding TotalPrintCount}"/>
                                            <Run Text="times total"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:MM/dd/yyyy}'}" 
                                                  FontSize="9" 
                                                  Foreground="DarkGray"/>
                                        <TextBlock Text="{Binding LastPrintedDate, StringFormat='Last used: {0:MM/dd/yyyy}', TargetNullValue='Never printed'}" 
                                                  FontSize="9" 
                                                  Foreground="DarkGray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Load Button -->
                    <Button Content="📥 Load"
                           Command="{Binding LoadBarcodeCommand}"
                           CommandParameter="{Binding CurrentBarcodeRecord}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Stretch"
                           ToolTip="Load selected barcode with all settings"/>
                    
                    <!-- Statistics -->
                    <Border Background="#EBF5FB" 
                           BorderBrush="#3498DB"
                           BorderThickness="1"
                           Padding="10"
                           CornerRadius="4"
                           Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="📊 Quick Stats" 
                                      FontSize="12"
                                      FontWeight="Bold"
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,5"/>
                            <TextBlock FontSize="11" Foreground="#34495E">
                                <Run Text="Total barcodes: "/>
                                <Run Text="{Binding RecentBarcodes.Count, Mode=OneWay}" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          FontSize="12" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedPrinter, StringFormat='🖨️ {0}'}" 
                              FontSize="12" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,25,0"/>
                    
                    <Ellipse Width="12" Height="12" 
                              Fill="{Binding IsValidData, Converter={x:Static converters:BooleanToBrushConverter.Default}}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    
                    <TextBlock Text="{Binding IsValidData, Converter={x:Static converters:BooleanToStatusConverter.Default}}" 
                              FontSize="12" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
