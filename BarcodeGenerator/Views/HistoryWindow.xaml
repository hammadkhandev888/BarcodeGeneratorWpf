<Window x:Class="BarcodeGenerator.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BarcodeGenerator.ViewModels"
        mc:Ignorable="d"
        Title="Barcode History" 
        Height="600" 
        Width="1000"
        MinHeight="400"
        MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/barcode-icon.ico">

    <Window.DataContext>
        <viewmodels:HistoryViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#ECF0F1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ðŸ“‹" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Barcode History" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="{Binding TotalCount, StringFormat='({0} total)'}" 
                               Margin="10,0,0,0" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="ðŸ”„ Refresh" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding RefreshCommand}"/>
            </Grid>
        </Border>

        <!-- Search Controls -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="20,10" BorderThickness="0,1" BorderBrush="#E5E5E5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="ðŸ” Search:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="Medium"/>

                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6"
                         BorderThickness="1"
                         BorderBrush="#BDC3C7"
                         Margin="0,0,10,0"
                         ToolTip="Search by barcode text, description, or date (YYYY-MM-DD)"/>

                <Button Grid.Column="2" 
                        Content="Search" 
                        Style="{StaticResource SearchButtonStyle}"
                        Command="{Binding SearchCommand}"/>

                <Button Grid.Column="3" 
                        Content="Clear" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding ClearSearchCommand}"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding FilteredBarcodes}"
                  SelectedItem="{Binding SelectedBarcode}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#F8F9FA"
                  BorderThickness="1"
                  BorderBrush="#E5E5E5"
                  Margin="20,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Barcode Text" 
                                    Binding="{Binding BarcodeText}" 
                                    Width="200"
                                    FontFamily="Consolas"
                                    FontWeight="Medium"/>

                <DataGridTextColumn Header="Description" 
                                    Binding="{Binding Description}" 
                                    Width="*"
                                    MinWidth="150"/>

                <DataGridTextColumn Header="Label Size" 
                                    Width="100">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} Ã— {1}">
                            <Binding Path="LabelWidth"/>
                            <Binding Path="LabelHeight"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Barcode Size" 
                                    Width="100">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} Ã— {1}">
                            <Binding Path="BarcodeWidth"/>
                            <Binding Path="BarcodeHeight"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Label Count" 
                                    Binding="{Binding DefaultLabelCount}" 
                                    Width="80"/>

                <DataGridTextColumn Header="Created" 
                                    Binding="{Binding CreatedDate, StringFormat='yyyy-MM-dd HH:mm'}" 
                                    Width="130"/>

                <DataGridTextColumn Header="Last Printed" 
                                    Binding="{Binding LastPrintedDate, StringFormat='yyyy-MM-dd HH:mm'}" 
                                    Width="130"/>

                <DataGridTextColumn Header="Print Count" 
                                    Binding="{Binding TotalPrintCount}" 
                                    Width="80"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E8F4FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#F8F9FA" Padding="20,15" BorderThickness="0,1" BorderBrush="#E5E5E5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ“‹ Load Selected" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding LoadSelectedCommand}"
                        ToolTip="Load selected barcode in main window"/>

                <Button Content="ðŸ–¨ï¸ Reprint" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding ReprintSelectedCommand}"
                        ToolTip="Reprint selected barcode"/>

                <Button Content="ðŸ—‘ï¸ Delete" 
                        Style="{StaticResource DeleteButtonStyle}"
                        Command="{Binding DeleteSelectedCommand}"
                        ToolTip="Delete selected barcode from history"/>

                <Button Content="âŒ Close" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloseButton_Click"
                        Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#34495E" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1" 
                             Width="100" 
                             Height="6"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>